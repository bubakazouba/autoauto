{
    "env": {
        "node": true,
        "es6": true,
        "jasmine": true,
        "jest": true,
        "browser": true,
        "webextensions": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "ignorePatterns": [
        "backgroundbundle.js",
        "contentbundle.js",
        "popupbundle.js"
    ],
    "rules": {
        "no-prototype-builtins": "off",
        "no-unused-vars": [
            "error",
            {
                "varsIgnorePattern": "_"
            }
        ],
        "space-before-function-paren": [
            "error",
            "never"
        ],
        "comma-spacing": [
            2,
            {
                "before": false,
                "after": true
            }
        ], // 2 means error
        "key-spacing": [
            "error",
            {
                "beforeColon": false,
                "afterColon": true
            }
        ],
        "no-console": "off",
        "no-constant-condition": "off",
        "no-extra-boolean-cast": "off",
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ],
        "brace-style": [
            "error"
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "space-in-parens": [
            "error",
            "never"
        ]
    }
}