{
    "name": "Getting Started Example",
    "version": "1.0",
    "description": "Build an Extension!",
    "permissions": ["nativeMessaging", "storage", "declarativeContent", "activeTab", "tabs", "<all_urls>", "contextMenus"],
    "background":
    {
        "scripts": ["extension/utils.js", "extension/background.js"],
        "persistent": false
    },
    
    "content_scripts": [
    {
        "matches": ["<all_urls>"],
        "js": ["extension/content.js"]
    }],
    "icons": {
        "32": "extension/images/red.png"
    },
    "manifest_version": 2,
    "browser_action": {
        "default_icon": {
            "32": "extension/images/red.png"
        },
        "default_title": "Google Mail",      // optional; shown in tooltip
        "default_popup": "extension/popup.html"        // optional
      }
}